<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dimen_18dp"
    android:layout_marginEnd="@dimen/dimen_18dp">

    <!--android:fontFamily="@font/avenir_medium" -->
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/formElementTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dimen_5dp"
        android:paddingEnd="@dimen/dimen_5dp"
        android:gravity="start"
        android:textSize="14sp" />

    <android.support.v7.widget.AppCompatEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/formElementValue"
        android:maxLines="2"
        android:ellipsize="end"
        android:inputType="none"
        android:cursorVisible="false"
        android:focusableInTouchMode="false"
        android:textSize="15sp"
        android:hint="@string/please_select"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical|start"
        android:drawableEnd="@drawable/ic_arrow_drop_down_24dp"
        android:drawableRight="@drawable/ic_arrow_drop_down_24dp"
        android:layout_marginStart="@dimen/dimen_3dp"
        android:layout_marginEnd="@dimen/dimen_3dp"/>

</LinearLayout>
